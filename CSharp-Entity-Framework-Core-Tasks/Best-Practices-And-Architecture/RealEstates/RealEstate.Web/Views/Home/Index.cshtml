@model IEnumerable<RealEstates.Services.Models.DistrictViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-5">Welcome to Real Estates BG</h1>

</div>

<table class="table table-striped table-hover table-sm" >
    <tr>
        <td>District</td>
        <td>Properties</td>
        <td>Avg. price</td>
        <td>Min price</td>
        <td>Max price</td>
    </tr>
@foreach (var district in this.Model
    .Where(p => p.PropertiesCount > 20)
    .OrderByDescending(p => p.AveragePrice))
{
    <tr>
        <td>@district.Name</td>
        <td>@district.PropertiesCount</td>
        <td>@district.AveragePrice.ToString("0.00")€</td>
        <td>@district.MinPrice€</td>
        <td>@district.MaxPrice€</td>
    </tr>
}
</table>
